<body>
  <div class="card">
    <h1>Will you marry me? üíç</h1>
    <p>I have one tiny question‚Ä¶</p>

    <div class="stage" id="stage" aria-label="Proposal stage">
      <div class="buttons">
        <button id="yesBtn" type="button">Yes üíñ</button>
        <button id="noBtn" type="button" aria-label="No button">No üôà</button>
      </div>
    </div>

    <div class="accepted" id="accepted">
      YAY!! <span>It‚Äôs a YES!</span> üéâüíñ
    </div>
    <div class="hint">Tip: try tapping ‚ÄúNo‚Äù üòÖ</div>
  </div>

  <script>
    const stage = document.getElementById("stage");
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");
    const accepted = document.getElementById("accepted");

    function clamp(n, min, max) { return Math.max(min, Math.min(max, n)); }

    function moveNo() {
      // Stage bounds
      const sRect = stage.getBoundingClientRect();
      const bRect = noBtn.getBoundingClientRect();

      // Keep button fully inside stage with a margin
      const margin = 10;
      const maxX = sRect.width - bRect.width - margin;
      const maxY = sRect.height - bRect.height - margin;

      // Random position
      const x = Math.random() * maxX;
      const y = Math.random() * maxY;

      noBtn.style.left = clamp(x, margin, maxX) + "px";
      noBtn.style.top  = clamp(y, margin, maxY) + "px";
    }

    // Desktop: run away on hover
    noBtn.addEventListener("pointerover", moveNo);

    // Mobile: run away on attempted tap
    noBtn.addEventListener("touchstart", (e) => {
      e.preventDefault(); // stops it from actually "clicking"
      moveNo();
    }, { passive: false });

    // If they somehow click No, still move it
    noBtn.addEventListener("click", (e) => {
      e.preventDefault();
      moveNo();
    });

    yesBtn.addEventListener("click", () => {
      accepted.style.display = "block";
      yesBtn.textContent = "YES!! üíñ";
      // Optional: gently disable No after acceptance
      noBtn.style.display = "none";
    });

    // Set an initial safe position after layout
    window.addEventListener("load", () => moveNo());
    window.addEventListener("resize", () => moveNo());
  </script>
</body>
