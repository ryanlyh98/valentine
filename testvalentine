    * { box-sizing: border-box; }

    body {
      margin: 0;
      min-height: 100svh; /* better on mobile than 100vh */
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      background: radial-gradient(1200px 600px at 50% 0%, #ffe4f1 0%, var(--bg) 55%, #f3f4ff 100%);
      color: var(--text);
      overflow: hidden; /* prevents page scroll when No moves */
      display: grid;
      place-items: center;
      padding: 16px;
    }

    .card {
      width: min(520px, 100%);
      background: rgba(255,255,255,0.85);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(0,0,0,0.06);
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08);
      padding: 22px 18px;
      text-align: center;
      position: relative;
    }

    h1 {
      margin: 6px 0 8px;
      font-size: clamp(28px, 5vw, 40px);
